<!-- ball 3 -->

<scenefile>
	<globaldata>
		<diffusecoeff v="0.5"/>
		<specularcoeff v="0.5"/>
		<ambientcoeff v="0.5"/>
	</globaldata>

	<lightdata>
		<id v="0"/>
		<color r="1" g="1" b="1"/>
		<position x="0" y="0" z="-3"/>
	</lightdata>
    
    <cameradata>
        <pos x="20" y="20" z="20"/>
        <focus x="0" y="0" z="0"/>
        <up x="0" y="1" z="0"/>
        <heightangle v="45"/>
    </cameradata>

	<object type="tree" name="root">
    
        <transblock>
            <scale x=".75" y=".75" z=".75" /><translate x="-1" y="0" z="-3" />
            
            <object type="primitive" name="sphere" >
                <diffuse r="0" g="0" b="1" />
                <specular r="1" g="1" b="0" />
            </object>
        </transblock>
        
        <transblock>
            <scale x=".75" y=".75" z=".75" /><translate x="1" y="0" z="-3" />
            
            <object type="primitive" name="sphere" >
                <diffuse r="0" g="1" b="0" />
                <specular r="1" g="1" b="0" />
            </object>
        </transblock>
        
        <!-- floor -->
        <transblock>
            <scale x="20" y="20" z=".01" /><translate x="1" y="0" z="-10" />
            
            <object type="primitive" name="cube" >
                <diffuse r="1" g="1" b="1" />
            </object>
        </transblock>
        
        <!-- front wall -->
        <transblock>
            <scale x="20" y="20" z=".01" /><translate x="0" y="0" z="-10" />
            <object type="primitive" name="cube" >
                <diffuse r="1" g="1" b="1" />
            </object>
        </transblock>
        
        <!-- right wall -->
        <transblock>
            <scale x=".01" y="20" z="20" /><translate x="10" y="0" z="0" />
            
            <object type="primitive" name="cube" >
                <diffuse r="1" g="0" b="0" />
            </object>
        </transblock>
        
        <!-- left wall -->
        <transblock>
            <scale x=".01" y="20" z="20" /><translate x="-10" y="0" z="0" />
            
            <object type="primitive" name="cube" >
                <diffuse r="0" g="1" b="0" />
            </object>
        </transblock>
        
        <!-- back wall -->
        <transblock>
            <scale x="20" y="20" z=".01" /><translate x="0" y="0" z="10" />
            
            <object type="primitive" name="cube" >
                <diffuse r="0" g="0" b="1" />
            </object>
        </transblock>
        
        <!-- ceiling -->
        <transblock>
            <scale x="20" y="20" z=".01" /><translate x="1" y="0" z="-10" />
            
            <object type="primitive" name="cube" >
                <diffuse r="0" g="1" b="1" />
            </object>
        </transblock>
        
	</object>
</scenefile>

